<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#E6EE9C">

        <ImageButton
            android:id="@+id/btnHospital"
            android:src="@drawable/hopital"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/fireBtn"
            android:layout_below="@id/btnHospital"
            android:layout_marginTop="20dp"
            android:src="@drawable/fire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/policeBtn"
            android:src="@drawable/police"
            android:layout_toRightOf="@id/btnHospital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/rescueBtn"
            android:layout_marginTop="20dp"
            android:layout_alignRight="@id/policeBtn"
            android:layout_below="@id/policeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rescue"/>
        </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageButton
            android:id="@+id/btnHome"
            android:src="@drawable/calls"
            android:background="@android:color/transparent"
            android:layout_gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/btnNearby"
            android:layout_gravity="bottom"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/location"/>


    </LinearLayout>



</LinearLayout>